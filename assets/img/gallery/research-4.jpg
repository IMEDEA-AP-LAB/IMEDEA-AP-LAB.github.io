<svg width="400" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="seaGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e40af;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="400" height="200" fill="url(#seaGradient)"/>
  
  <!-- Boat -->
  <g fill="white">
    <ellipse cx="200" cy="70" rx="60" ry="8"/>
    <rect x="170" y="62" width="60" height="8" rx="4"/>
    <rect x="190" y="54" width="20" height="8" fill="#dc2626"/>
    <!-- Mast -->
    <line x1="200" y1="54" x2="200" y2="30" stroke="white" stroke-width="2"/>
    <!-- Flag -->
    <polygon points="200,30 220,35 200,40" fill="#ef4444"/>
  </g>
  
  <!-- Oceanographic instrument deployment -->
  <g stroke="white" stroke-width="2" fill="none">
    <line x1="200" y1="78" x2="200" y2="150"/>
    <!-- CTD instrument -->
    <rect x="195" y="150" width="10" height="20" fill="#fbbf24" stroke="white"/>
    <circle cx="200" cy="165" r="2" fill="white"/>
    <!-- Sensors -->
    <line x1="190" y1="155" x2="185" y2="155" stroke="#06b6d4"/>
    <line x1="210" y1="155" x2="215" y2="155" stroke="#06b6d4"/>
    <line x1="190" y1="160" x2="185" y2="160" stroke="#f59e0b"/>
    <line x1="210" y1="160" x2="215" y2="160" stroke="#f59e0b"/>
  </g>
  
  <!-- Depth markers -->
  <g fill="white" opacity="0.6" font-family="Arial, sans-serif" font-size="10">
    <text x="220" y="100">10m</text>
    <text x="220" y="125">50m</text>
    <text x="220" y="150">100m</text>
  </g>
  
  <!-- Water particles -->
  <g fill="white" opacity="0.4">
    <circle cx="100" cy="120" r="1"/>
    <circle cx="150" cy="135" r="1"/>
    <circle cx="250" cy="110" r="1"/>
    <circle cx="300" cy="145" r="1"/>
    <circle cx="120" cy="160" r="1"/>
    <circle cx="280" cy="130" r="1"/>
  </g>
  
  <text x="200" y="190" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">
    Field Deployment
  </text>
</svg>
